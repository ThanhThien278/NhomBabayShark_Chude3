@model IEnumerable<SalesModel> 
@{
    Layout = null;

}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/sale.css">
    <title>Ưu Đãi Dành Cho Hội Viên</title>
</head>
<body>
    @Html.Partial("_SideBar")

    <div class="container">
        <header>
            <h1>Ưu Đãi Dành Cho Hội Viên</h1>
        </header>

        <div class="membership-cards">
            @foreach (var sales in Model)
            {
                <div class="card">
                    <h2>@sales.Title</h2>
                    <p><strong>Điều Kiện:</strong> @sales.Condition</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        @foreach (var benefit in sales.Benefits)
                        {
                            <li>@benefit</li>
                        }
                    </ul>
                    <div class="card-image">
                        <img src="~/img/@sales.ImageUrl" alt="@sales.Title">
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
