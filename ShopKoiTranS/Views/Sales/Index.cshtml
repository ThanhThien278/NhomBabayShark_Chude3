@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/sale.css">
    <title>Ưu Đãi</title>
</head>
<body>
    @Html.Partial("_SideBar")
        <div class="container">
            <header>
                <h1>Ưu Đãi Dành Cho Hội Viên</h1>
            </header>

            <div class="membership-cards">
                <!-- Thẻ Hội Viên Thường -->
                <div class="card">
                    <h2>Hội Viên Thường</h2>
                    <p><strong>Điều Kiện:</strong> Tổng số tiền đã đặt trên 1 triệu đồng và hoàn thành đủ 3 đơn hàng</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        <li>Ưu tiên vận chuyển</li>
                        <li>Giảm giá 3% cho mỗi lần vận chuyển với khoảng cách dưới 50km</li>
                        <li>Hỗ trợ 24/7</li>
                    </ul>
                    <div class="card-image">
                        <img src="~/img/thuong.jpg" alt="Thẻ Hội Viên Thường">
                    </div>
                </div>

                <!-- Thẻ Hội Viên Bạc -->
                <div class="card">
                    <h2>Hội Viên Bạc</h2>
                    <p><strong>Điều Kiện:</strong> Tổng số tiền đã đặt trên 3 triệu đồng và hoàn thành đủ 7 đơn hàng</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        <li>Ưu tiên vận chuyển</li>
                        <li>Giảm giá 5% cho mỗi lần vận chuyển</li>
                        <li>Hỗ trợ 24/7</li>
                    </ul>
                    <div class="card-image">
                        <img src="~/img/bachv.jpg" alt="Thẻ Hội Viên Bạc">
                    </div>
                </div>

                <!-- Thẻ Hội Viên Vàng -->
                <div class="card">
                    <h2>Hội Viên Vàng</h2>
                    <p><strong>Điều Kiện:</strong> Tổng số tiền đã đặt trên 5 triệu đồng và hoàn thành đủ 10 đơn hàng</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        <li>Ưu tiên vận chuyển</li>
                        <li>Giảm giá 15% cho mỗi lần vận chuyển và miễn phí bảo hiểm hàng hóa</li>
                        <li>Hỗ trợ 24/7</li>
                    </ul>
                    <div class="card-image">
                        <img src="~/img/vang.jpg" alt="Thẻ Hội Viên Vàng">
                    </div>
                </div>

                <!-- Thẻ Hội Viên Kim Cương -->
                <div class="card">
                    <h2>Hội Viên Kim Cương</h2>
                    <p><strong>Điều Kiện:</strong> Tổng số tiền đã đặt trên 15 triệu đồng và hoàn thành đủ 30 đơn hàng</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        <li>Ưu tiên vận chuyển</li>
                        <li>Giảm giá 20% cho mỗi lần vận chuyển và miễn phí bảo hiểm hàng hóa</li>
                        <li>Hỗ trợ 24/7</li>
                    </ul>
                    <div class="card-image">
                        <img src="~/img/kc.jpg" alt="Thẻ Hội Viên Kim Cương">
                    </div>
                </div>

                <!-- Thẻ Hội Viên Hắc Kim -->
                <div class="card">
                    <h2>Hội Viên Hắc Kim</h2>
                    <p><strong>Điều Kiện:</strong> Tổng số tiền đã đặt trên 30 triệu đồng và hoàn thành đủ 40 đơn hàng</p>
                    <p><strong>Quyền Lợi:</strong></p>
                    <ul>
                        <li>Ưu tiên vận chuyển</li>
                        <li>Giảm giá 40% cho mỗi lần vận chuyển và miễn phí bảo hiểm hàng hóa</li>
                        <li>Hỗ trợ 24/7</li>
                        <li>Được ưu tiên xử lý đơn hàng, đảm bảo thời gian vận chuyển nhanh và sự an toàn tuyệt đối</li>
                    </ul>
                    <div class="card-image">
                        <img src="~/img/hvhk.jpg" alt="Thẻ Hội Viên Hắc Kim">
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
