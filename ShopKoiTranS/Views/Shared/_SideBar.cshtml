<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Sidebar.css" />
    <title>KoiTranS</title>
</head>
<body>
    <header id="header">
        <div class="logo btn">
            <a href="@Url.Action("Index", "Home")>
                <img src="~/img/logo.png" alt="KoiTranS Logo" />
                <span class="logo-text">KoiTranS</span>
            </a>
        </div>
        <ul class="nav btn">
            <li><a href="@Url.Action("Index", "Home")">Trang Chủ</li></a>
            <li class="topsub">
                <a>Dịch Vụ <i class="fa-solid fa-caret-down icon-min"></i></a>
                <ul class="subnav">
                    <li><a href="@Url.Action("TranSport", "Index")">Tư Vấn và Chăm Sóc</a></li>
                    <li><a href="@Url.Action("TranSport", "Index")">Vận Chuyển</a></li>
                    <li><a href="@Url.Action("KoiWorld", "Koi")">KOI WORLD</a></li>
                </ul>
            </li>
            <li><a href="@Url.Action("Discounts", "Home")">Ưu Đãi</a></li>
            <li><a href="@Url.Action("Blog", "Home")" ">Đánh Giá <i class="fa-solid fa-comments icon-min"></i></a></li>
            <li><a href="@Url.Action("Feedback", "Customer")">Liên Hệ <i class="fa-solid fa-phone icon-min"></i></a></li>
        </ul>
        <div class="user btn">
            <a href="~/Account/Login" class="login">Đăng Nhập</a>
            <i class="fa-solid fa-cart-shopping icon"></i>
            <i class="fa-regular fa-bell icon"></i>
        </div>
    </header>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Hiển thị tên công ty và trạng thái đăng nhập -->
       
        

        <ul>
            <li><a href="@Url.Action("Index", "Home")"><i class="fa-solid fa-house"></i> Trang Chủ</a></li>
            <li><a href="@Url.Action("TranSport", "Index")"><i class="fa-solid fa-concierge-bell"></i> Dịch Vụ</a></li>
            <li><a href="@Url.Action("KoiWorld", "Koi")"><i class="fa-solid fa-fish"></i> Koi World</a></li>
            <li><a href="@Url.Action("Pricing", "Home")"><i class="fa-solid fa-tag"></i> Bảng Giá</a></li>
            <li><a href="@Url.Action("Discounts", "Home")"><i class="fa-solid fa-percent"></i> Ưu Đãi</a></li>
            <li><a href="@Url.Action("Blog", "Home")"><i class="fa-solid fa-blog"></i> Blog Chia Sẻ</a></li>
            <li><a href="@Url.Action("News", "Home")"><i class="fa-solid fa-newspaper"></i> Tin Tức</a></li>
            <li><a href="@Url.Action("FAQ", "Home")"><i class="fa-solid fa-question-circle"></i> Câu Hỏi Thường Gặp</a></li>
            <li><a href="@Url.Action("Feedback", "Customer")"><i class="fa-solid fa-comments"></i> Đánh Giá & Feedback</a></li>
            <li><a href="@Url.Action("Profile", "Customer")"><i class="fa-solid fa-user"></i> Hồ Sơ Khách Hàng</a></li>
        </ul>
    </div>

    <script >
                document.querySelector('.sidebar').addEventListener('click', function () {
            document.querySelector('.main-content').classList.toggle('hidden');
        });

    </script>
</body>
</html>
