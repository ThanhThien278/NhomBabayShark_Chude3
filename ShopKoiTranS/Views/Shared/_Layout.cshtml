
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KoiTranS</title>
    <link rel="icon" href="~/img/koilogo.jpg" type="image/jpg" />
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/Home.css" />
</head>
<body>
    <div id="main">
        <header id="header">
            <div class="logo btn">
                <a href="~/Home/Index">
                    <img src="~/img/logo.png" alt="KoiTranS Logo" />
                    <span class="logo-text">KoiTranS</span>
                </a>
            </div>

            <ul class="nav btn">
                <li><a href="~/Home/Index"><i class="fa-solid fa-house icon-min"></i> Trang Chủ</a></li>
                <li class="topsub">
                    <a>Dịch Vụ <i class="fa-solid fa-caret-down icon-min"></i></a>
                    <ul class="subnav">
                        <li><a href="#tuvan">Tư Vấn và Chăm Sóc</a></li>
                        <li><a href="#vanchuyen">Vận Chuyển</a></li>
                        <li><a href="#koiworld">KOI WORLD</a></li>
                    </ul>
                </li>
                <li><a href="#sale">Ưu Đãi</a></li>
                <li><a href="#review">Đánh Giá <i class="fa-solid fa-comments icon-min"></i></a></li>
                <li><a href="#">Liên Hệ <i class="fa-solid fa-phone icon-min"></i></a></li>
            </ul>

            <div class="user btn">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="javascript:void(0);" class="user-icon" id="user-icon">
                        <i class="fa-solid fa-circle-user icon"></i>
                        <span class="username">@User.Identity.Name</span>
                    </a>
                    <div id="user-menu" class="user-menu">
                        <div class="user-card">
                            <ul>
                                
                                <li><a href="~/Cart"><i class="fa-solid fa-cart-shopping"></i> Giỏ hàng</a></li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-logout"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <a href="~/Account/Index" class="login">Đăng Nhập</a>
                }
                <i class="fa-regular fa-bell icon"></i>
            </div>

        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <<footer class="border-top footer text-muted">
            <div id="contact">
                <div class="contact-text">
                    <div class="content-info">
                        <div class="info">
                            <h3>Địa chỉ:</h3>
                            <p>
                                Đường Tân Chán Hiệp 25, Phường Tân Chán Hiệp, Quận 12, Thành phố Hồ Chí Minh
                            </p>
                            <div>
                                <h3>Số điện thoại:</h3>
                                <p><a href="tel:+848573441020">+848573441020</a></p>
                            </div>
                            <div>
                                <h3>Email:</h3>
                                <p><a href="mailto:koitrans@gmail.com">koitrans@gmail.com</a></p>
                            </div>
                            <div class="social-icons">
                                <h3>Mạng xã hội:</h3>
                                <a href="https://facebook.com" target="_blank" class="social-icon">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="https://instagram.com" target="_blank" class="social-icon">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="https://youtube.com" target="_blank" class="social-icon">
                                    <i class="fab fa-youtube"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="map-container">
                    <h3>Bản đồ:</h3>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.9298774425075!2d106.6542906144679!3d10.850028062287083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752c2c6a74a5f9%3A0x3c8d87e9e0a295d1!2zQ2jhuqFuIEdpYW5nIFRyYW5nIEjhuq9jIEhpbmggVMOibg!5e0!3m2!1svi!2s!4v1633302331038!5m2!1svi!2s"
                            width="300"
                            height="200"
                            style="border: 0"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>
        </footer>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('#user-icon').click(function (e) {
                e.preventDefault();
                $('#user-menu').toggle();
            });

            $(document).click(function (e) {
                if (!$(e.target).closest('#user-icon, #user-menu').length) {
                    $('#user-menu').hide();
                }
            });
        });
    </script>
</body>
</html>
