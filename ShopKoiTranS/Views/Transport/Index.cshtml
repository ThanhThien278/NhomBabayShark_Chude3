@{

    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách đơn hàng vận chuyển</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            margin-top: 20px;
            color: #333;
        }

        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

            .table th, .table td {
                padding: 10px;
                text-align: center;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #007BFF;
                color: #fff;
                text-transform: uppercase;
                font-size: 14px;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #f1f9ff;
                cursor: pointer;
            }

        .btn {
            display: inline-block;
            padding: 5px 10px;
            font-size: 12px;
            text-decoration: none;
            border-radius: 4px;
            transition: 0.3s ease;
        }

        .btn-info {
            background-color: #17a2b8;
            color: #fff;
            border: none;
        }

        .btn-success {
            background-color: #28a745;
            color: #fff;
            border: none;
        }

            .btn-info:hover, .btn-success:hover {
                opacity: 0.8;
            }

        .alert {
            width: 90%;
            margin: 10px auto;
            padding: 15px;
            text-align: center;
            border-radius: 4px;
        }

        .alert-warning {
            background-color: #ff4c4c;
            color: #fff;
        }


        .selected-row {
            background-color: #d1ecf1 !important;
            color: #004085;
        }
    </style>
</head>
<body>
    @Html.Partial("_SideBar")
    <h2>Danh sách đơn hàng vận chuyển</h2>

    <p class="alert alert-warning" id="noTransportsMessage" style="display: none;">
        Không có đơn hàng nào để hiển thị!
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ và Tên</th>
                <th>Số Điện Thoại</th>
                <th>Loại Cá</th>
                <th>Tên Cá</th>
                <th>Cân Nặng (kg)</th>
                <th>Số Lượng Cá</th>
                <th>Địa Điểm Xuất Phát</th>
                <th>Địa Điểm Đến</th>
                <th>Phương Thức Vận Chuyển</th>
                <th>Phương Tiện Vận Chuyển</th>
                <th>Khoảng Cách (km)</th>
                <th>Giá Vận Chuyển</th>
                <th>Ngày Tạo</th>
                <th>Người Phụ Trách</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const rows = document.querySelectorAll(".table tbody tr");

            rows.forEach(row => {
                row.addEventListener("click", function () {
                    rows.forEach(r => r.classList.remove("selected-row"));
                    this.classList.add("selected-row");
                });
            });


            const buttons = document.querySelectorAll(".btn");
            buttons.forEach(btn => {
                btn.addEventListener("mouseover", function () {
                    this.style.transform = "scale(1.1)";
                });

                btn.addEventListener("mouseout", function () {
                    this.style.transform = "scale(1)";
                });
            });


            const noTransportsMessage = document.getElementById("noTransportsMessage");
            if (document.querySelectorAll(".table tbody tr").length === 0) {
                noTransportsMessage.style.display = "block";
            }
        });
    </script>
</body>
</html>
