@model IEnumerable<KoiWorldModel>

@{
    Layout = null;
    var categories = ViewBag.Categories as List<ShopKoiTranS.Models.CategoriKoisModel>;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Koi World</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/koiworld.css">
</head>


<body>
  
    


    <div class="product-row">
        @foreach (var item in Model)
        {
            <div class="product-item">
                <img src="~/img/@item.Image" alt="@item.KoiName">
                <div class="overlay">
                    <h4>@item.KoiName</h4>
                    <p class="size">Kích thước: @item.Size cm</p>
                    <p class="price">Giá: @item.Price VND</p>
                    <label for="quantity">Số lượng:</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" class="quantity-input">
                    <a href="#" class="add-to-cart">
                        <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                    </a>
                    <a href="#" class="view-details">
                        <i class="fas fa-eye"></i> Xem chi tiết
                    </a>
                </div>
            </div>
        }
    </div>
</body>

</html>
