@model ShopKoiTranS.Models.ViewModel.CheckoutViewModel

@{
    ViewData["Title"] = "Xác Nhận Đơn Hàng";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <!-- Display Cart Items -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                    <th>Tổng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.KoiName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C0")</td>
                        <td>@item.TotalPrice.ToString("C0")</td>
                    </tr>
                }

                <!-- Display transport cost -->
                @foreach (var transport in Model.Transports)
                {
                    <tr>
                        <td colspan="3"><strong>Đơn Vận Chuyển cá: @transport.LoaiCa</strong></td>
                        <td colspan="3"><strong>So luong: @transport.SoLuongCa</strong></td>
                        <td>@transport.TransportPrice.ToString("C0")</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Display Total Prices -->
        <h4>Tổng tiền sản phẩm: @Model.TotalProductPrice.ToString("C0")</h4>

        <!-- Tổng phí vận chuyển -->
        <h4>Phí vận chuyển:</h4>
        <ul>
            @foreach (var transport in Model.Transports)
            {
                <li>@transport.LoaiCa: @transport.TransportPrice.ToString("C0")</li>
            }
        </ul>

        <h4>Tổng cộng: @ViewData["GrandTotal"]</h4>

        <!-- Payment Method Form -->
        <form method="post" action="@Url.Action("PlaceOrder", "Cart")">
            <!-- Hidden CartId field -->
            <input type="hidden" name="CartId" value="@Model.CartId" />

            <div class="mb-3">
                <label for="paymentMethod" class="form-label">Phương thức thanh toán</label>
                <select class="form-select" id="paymentMethod" name="PaymentMethod" required>
                    <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                    <option value="BankTransfer">Chuyển khoản ngân hàng</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success">Thanh Toán</button>
        </form>
    </div>

    <footer class="mt-5 text-center">
        &copy; 2024 Shop Cá Koi
    </footer>/-strong/-heart:>:o:-((:-h
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>