@model ShopKoiTranS.Models.PriceModel

@{
    ViewData["Title"] = "Chỉnh sửa bảng giá";
    Layout = null;
}
@Html.Partial("_SideBar")
<link rel="stylesheet" type="text/css" href="~/css/Admin/Edit.css">
<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
   
    <div class="form-group">
        <label for="VehicleType">Loại phương tiện</label>
        <input type="text" class="form-control" id="VehicleType" name="VehicleType" value="@Model.VehicleType" required />
    </div>
    <div class="form-group">
        <label for="MinWeight">Cân nặng tối thiểu</label>
        <input type="number" class="form-control" id="MinWeight" name="MinWeight" value="@Model.MinWeight" required />
    </div>
    <div class="form-group">
        <label for="MaxWeight">Cân nặng tối đa</label>
        <input type="number" class="form-control" id="MaxWeight" name="MaxWeight" value="@Model.MaxWeight" required />
    </div>
    <div class="form-group">
        <label for="Price0_50">Giá 0-50kg</label>
        <input type="number" class="form-control" id="Price0_50" name="Price0_50" value="@Model.Price0_50" required />
    </div>
    <div class="form-group">
        <label for="Price51_100">Giá 51-100kg</label>
        <input type="number" class="form-control" id="Price51_100" name="Price51_100" value="@Model.Price51_100" required />
    </div>
    <div class="form-group">
        <label for="Price101_200">Giá 101-200kg</label>
        <input type="number" class="form-control" id="Price101_200" name="Price101_200" value="@Model.Price101_200" required />
    </div>
    <div class="form-group">
        <label for="PriceOver200">Giá trên 200kg</label>
        <input type="number" class="form-control" id="PriceOver200" name="PriceOver200" value="@Model.PriceOver200" required />
    </div>
    <div class="form-group">
        <label for="PriceOver20Kg">Giá trên 20kg</label>
        <input type="number" class="form-control" id="PriceOver20Kg" name="PriceOver20Kg" value="@Model.PriceOver20Kg" required />
    </div>
    <button type="submit" class="btn btn-warning">Cập nhật</button>
    <a href="@Url.Action("Index", "Price")" class="btn-back">Quay lại</a>
</form>
