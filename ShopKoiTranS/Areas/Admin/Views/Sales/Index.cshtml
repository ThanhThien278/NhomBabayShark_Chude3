@model IEnumerable<ShopKoiTranS.Models.SalesModel>

@{
    ViewData["Title"] = "Sales Management";
    Layout = null;
}
<link rel="stylesheet" href="~/css/Admin/Sales.css">
@Html.Partial("_SideBar")
<div class="container">
    <div class="main-content">
        <h2>Danh Sách Sales</h2>

        <!-- Nút tạo mới Sales -->
        <a href="@Url.Action("Create", "Sales")" class="btn-create">Tạo Mới Sales</a>

        <table class="sales-table">
            <thead>
                <tr>
                    <th>Tiêu Đề</th>
                    <th>Điều Kiện</th>
                    <th>Hình Ảnh</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sale in Model)
                {
                    <tr>
                        <td>@sale.Title</td>
                        <td>@sale.Condition</td>
                        <td><img src="@Url.Content("~/img/" + sale.ImageUrl)" class="sale-image" style="width: 200px; height: 200px; object-fit: cover;" /></td>

                        <td>
                            <a href="@Url.Action("Edit", "Sales", new { id = sale.Id })" class="btn-edit">Sửa</a>
                            <a href="@Url.Action("Delete", "Sales", new { id = sale.Id })" class="btn-delete">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
