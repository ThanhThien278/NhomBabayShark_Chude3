@model ShopKoiTranS.Models.KoiWorldModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Cá Koi Mới</title>
    <link rel="stylesheet" href="~/css/Admin/Create.css">
</head>
<body>
    @Html.Partial("_SideBar")

    <div class="container">
        <div class="main-content">
            <h2>Thêm Cá Koi Mới</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="CategoryId">Tên Loài</label>
                    <select id="CategoryId" name="CategoryKoiId" class="form-control">
                        <option value="">Chọn Loài Cá</option>
                        @foreach (var category in (SelectList)ViewBag.Loaicakoi)
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                </div>

                

                <div class="form-group">
                    <label for="KoiName">Tên Cá Koi</label>
                    <input type="text" id="KoiName" name="KoiName" class="form-control" placeholder="Vui lòng nhập vào tên cá" required />
                </div>

                <div class="form-group">
                    <label for="Size">Size (cm)</label>
                    <input type="number" id="Size" name="Size" class="form-control" required min="0" />
                </div>

                <div class="form-group">
                    <label for="Description">Mô Tả</label>
                    <textarea id="Description" name="Description" class="form-control" rows="4" required></textarea>
                </div>

                <div class="form-group">
                    <label for="Price">Giá (VND)</label>
                    <input type="number" id="Price" name="Price" class="form-control" min="1" required />
                </div>

                <div class="form-group">
                    <label for="Image">Ảnh</label>
                    <input type="file" id="Image" name="Image" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-add">Thêm Cá</button>
                <a href="@Url.Action("Index", "KoiWorld", new { area = "Admin" })" class="btn btn-back">Quay lại</a>
            </form>
        </div>
    </div>
</body>
</html>
