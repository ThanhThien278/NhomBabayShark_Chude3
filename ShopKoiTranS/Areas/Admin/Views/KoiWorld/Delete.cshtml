@model ShopKoiTranS.Models.KoiWorldModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xác Nhận Xóa Cá Koi</title>
    <link rel="stylesheet" href="~/css/Admin/Delete.css">
</head>
<body>
    @Html.Partial("_SideBar")

    <div class="container">
        <div class="main-content">
            <h2>Xác Nhận Xóa Cá Koi</h2>

            <div class="alert alert-warning">
                Bạn có chắc chắn muốn xóa cá Koi "<strong>@Model.KoiName</strong>" không?
            </div>

            <form method="post">
                <input type="hidden" name="KoiId" value="@Model.KoiId" />
                <button type="submit" class="btn btn-danger">Xóa</button>
                <a href="@Url.Action("Index", "KoiWorld", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</body>
</html>
