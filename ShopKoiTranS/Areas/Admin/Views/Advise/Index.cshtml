@model IEnumerable<ShopKoiTranS.Models.AdviseModel>

@{
    ViewData["Title"] = "Danh Sách Tư Vấn Chờ Xác Nhận";
}

<h2>Danh Sách Tư Vấn Chờ Xác Nhận</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Khách Hàng</th>
            <th>Số Điện Thoại</th>
            <th>Địa Điểm</th>
            <th>Mô Tả</th>
            <th>Trạng Thái</th>
            <th>Thời Gian Tư Vấn</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var advise in Model)
        {
            <tr>
                <td>@advise.AdviseId</td>
                <td>@advise.CustomerName</td>
                <td>@advise.CustomerPhone</td>
                <td>@advise.DiaDiem</td>
                <td>@advise.MoTa</td>
                <td>@advise.TrangThai</td>
                <td>@advise.ThoiGianTuVan?.ToString("g")</td>
                <td>
                    <!-- Liên kết tới hành động xác nhận -->
                    <a asp-action="Confirm" asp-route-id="@advise.AdviseId" class="btn btn-success">
                        Xác Nhận
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
